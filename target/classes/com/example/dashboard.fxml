<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import com.example.components.LeftSidebar?>

<HBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.DashboardController">
    <!-- Bagian sidebar, jangan lupa import com.example.components.LeftSidebar -->
    <LeftSidebar fx:id="sidebar" />
    
    <GridPane fx:id="ringkasanPenjualanGridPane" GridPane.columnIndex="1" GridPane.rowIndex="0">
        <Label text="Total Penjualan" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <Label fx:id="totalPenjualanLabel" text="70" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label text="Total Produk" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <Label fx:id="totalProdukLabel" text="5" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label text="Total Pendapatan Hari Ini" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <Label fx:id="totalPendapatanHariIniLabel" text="2875000.00" GridPane.columnIndex="1" GridPane.rowIndex="2" />
    </GridPane>

    <PieChart fx:id="totalPenjualanChart" GridPane.columnIndex="1" GridPane.rowIndex="0" prefWidth="400" prefHeight="400" />

    <TableView fx:id="produkHariIniTableView" GridPane.columnIndex="1" GridPane.rowIndex="1">
    </TableView>
  
    
</HBox>
