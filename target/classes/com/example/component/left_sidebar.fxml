<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.text.Font?>

<fx:root type="AnchorPane" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:id="left_sidebar" prefHeight="640" prefWidth="240">
    <children>
        <VBox spacing="20" prefWidth="240">
            <HBox id="logo_section" alignment="CENTER_LEFT">
                <ImageView fx:id="logo">
                    <fitWidth>60</fitWidth>
                    <preserveRatio>true</preserveRatio>
                </ImageView>
                <Label fx:id="project_name_left_sidebar" minHeight="16" minWidth="69" text="B-KNOW" />
            </HBox>
            
            <VBox fx:id="left_sidebar_content" maxWidth="1.7976931348623157E308">
                <HBox spacing="10" styleClass="sidebar-item" fx:id="dashboard" maxWidth="1.7976931348623157E308" prefHeight="50" alignment="CENTER_LEFT">
                    <ImageView fx:id="dashboard_icon" />
                    <Label fx:id="dashboard_button" maxWidth="1.7976931348623157E308" text="Dashboard" />
                </HBox>
                <HBox spacing="10" styleClass="sidebar-item" fx:id="penjualan" maxWidth="1.7976931348623157E308" prefHeight="50" alignment="CENTER_LEFT">
                    <ImageView fx:id="penjualan_icon" />
                    <Label fx:id="penjualan_button" maxWidth="1.7976931348623157E308" text="Penjualan" />
                </HBox>
                <HBox spacing="10" styleClass="sidebar-item" fx:id="produk" maxWidth="1.7976931348623157E308" prefHeight="50" alignment="CENTER_LEFT">
                    <ImageView fx:id="produk_icon" />
                    <Label fx:id="produk_button" maxWidth="1.7976931348623157E308" text="Produk" />
                </HBox>
                <HBox spacing="10" styleClass="sidebar-item" fx:id="rekap_penjualan" maxWidth="1.7976931348623157E308" prefHeight="50" alignment="CENTER_LEFT">
                    <ImageView fx:id="rekap_penjualan_icon" />
                    <Label fx:id="rekap_penjualan_button" maxWidth="1.7976931348623157E308" text="Rekap Penjualan" />
                </HBox>
                <HBox spacing="10" styleClass="sidebar-item" fx:id="rekap_produk" maxWidth="1.7976931348623157E308" prefHeight="50" alignment="CENTER_LEFT">
                    <ImageView fx:id="rekap_produk_icon" />
                    <Label fx:id="rekap_produk_button" maxWidth="1.7976931348623157E308" text="Rekap Produk" />
                </HBox>
                <HBox spacing="10" styleClass="sidebar-item, logout" fx:id="logout" maxWidth="1.7976931348623157E308" prefHeight="50" alignment="CENTER_LEFT">
                    <ImageView fx:id="logout_icon" />
                    <Label fx:id="logout_button" maxWidth="1.7976931348623157E308" text="Keluar" />
                </HBox>
            </VBox>
        </VBox>
    </children>
  
</fx:root>